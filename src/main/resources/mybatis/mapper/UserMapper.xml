<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.UserRepository">


    <resultMap id="UserResultMap" type="com.example.demo.entity.User">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="roleId" column="role_id" />
    </resultMap>

    <select id="getById" parameterType="int" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="getByEmail" parameterType="com.example.demo.entity.User" resultMap="UserResultMap">
        select * from users where mail = #{mail}
    </select>

    <insert id="save" parameterType="com.example.demo.entity.User">
        INSERT INTO users
        (name, mail, password)
        VALUES
            (#{name}, #{mail}, #{password})
    </insert>

